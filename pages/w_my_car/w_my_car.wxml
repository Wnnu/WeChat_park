<!--pages/w_my_car/w_my_car.wxml-->
<view wx:if='{{cars_number==""}}'>
  <!-- 无车牌显示 -->
  <text class="no-car-info">这里还没有车辆，点击立刻添加</text>
</view>
<view wx:else>
  <!-- 有车牌显示 -->
  <view class='list-car' wx:for="{{cars_number}}">
    <view class='list-car-info'>
      <text class='list-car-number'>{{item.number}}</text>
    </view>
    <view class='list-pay'>
      <text class='list-car-time'>绑定时间：{{item.time}}</text>
      <image  class="with_arrow" src="/images/right3.png"></image>
    </view>
  </view>
</view>
